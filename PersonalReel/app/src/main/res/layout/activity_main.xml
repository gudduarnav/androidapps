<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ExoPlayer's PlayerView with no controller; video is scaled in "zoom" mode
         which fills the screen while maintaining aspect ratio (cropping if necessary) -->
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:use_controller="false"
        app:resize_mode="zoom"
        android:layout_gravity="center" />

    <!-- Bottom overlay for video and app info; left aligned and allows multiple lines -->
    <TextView
        android:id="@+id/tvBottomInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:gravity="start"
        android:layout_gravity="bottom|start"
        android:singleLine="false"
        android:ellipsize="none" />
</FrameLayout>
