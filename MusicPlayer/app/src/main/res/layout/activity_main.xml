<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Title at the very top -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music Player by Arnav Mukhopadhyay (EMAIL: gudduarnav@gmail.com)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Header buttons: Exit, App Switch, Minimize -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/exitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exit" />

            <Button
                android:id="@+id/appSwitchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Switch"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/minimizeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimize" />
        </LinearLayout>

        <!-- Current day/date and time display -->
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date and Day"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- Folder selection and display -->
        <Button
            android:id="@+id/pickFolderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Music Folder"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/folderNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No folder selected"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Currently playing song info -->
        <TextView
            android:id="@+id/songNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Song Playing"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <!-- Playback control buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/playButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play" />

            <Button
                android:id="@+id/pauseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pause"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/stopButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/previousButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous" />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
